  keywords = {Correlation energy,Density-functional theory,Entanglement,Fermi gas,Heisenberg model,Hubbard model,Local-density approximation,Many-body theory,Model Hamiltonians,Spin Hamiltonians,Strong correlations,Transport}
}

@article{cardiasBetheSlaterCurveRevisited2017,
