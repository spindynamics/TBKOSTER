  langid = {english},
  file = {/home/maintenance/snap/zotero-snap/common/Zotero/storage/X4WM7NKP/Cardias et al. - 2017 - The Bethe-Slater curve revisited\; new insights fro.pdf;/home/maintenance/snap/zotero-snap/common/Zotero/storage/WMMEF2IH/s41598-017-04427-9.html}
